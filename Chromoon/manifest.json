{
  "manifest_version": 2,

  "name": "Chroom",
  "description": "Chroom basic",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "main.html"
  },
  "permissions": [
    "activeTab","alarms","background","browsingData",
    "tabs", "<all_urls>",
    "notifications"
  ],
  "background": {
    "scripts": [
      "chromoonframework/jquery.js", "chromoonframework/background.js", "chromoonframework/chromoon.js",
      "example_bg.js" ]
  }
}